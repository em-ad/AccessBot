<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg"
    tools:context=".view.NotificationCreationActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="64dp"
        android:text="ارسال اعلامیه عمومی جدید"
        android:background="#66333333"
        android:textColor="@color/white"
        android:gravity="center"
        android:fontFamily="@font/vazir_bold_fd"
        android:layout_marginTop="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="17sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etMessage"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/vazir_medium"
        android:textColor="@color/white"
        android:background="@drawable/rounded_bordered_white_box"
        android:paddingTop="12dp"
        android:textColorHint="#DDD"
        android:gravity="top|right"
        android:textSize="15sp"
        android:padding="12dp"
        android:paddingBottom="12dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="12dp"
        android:minLines="7"
        android:hint="متن اعلامیه را بنویسید..."
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvSend"
        app:layout_constraintTop_toBottomOf="@id/etMessage"
        android:text="ارسال درخواست"
        android:fontFamily="@font/vazir_bold_fd"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/rounded_bordered_white_box"
        android:foreground="?attr/selectableItemBackground"
        android:paddingTop="12dp"
        android:layout_marginTop="44dp"
        android:paddingBottom="12dp"
        android:layout_marginRight="32dp"
        android:layout_marginLeft="32dp"
        android:textSize="17sp"
        />

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/loading"
        android:padding="4dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="32dp"
        android:background="@drawable/rounded_bordered_white_box"
        app:trackColor="@color/white"
        app:indicatorColor="#cc666666"
        android:indeterminate="true"
        />

</androidx.constraintlayout.widget.ConstraintLayout>